{
    "manifest_version": 3,
    "name": "Telegram media sender",
    "version": "1.0",
    "permissions": [
        "contextMenus",
        "storage",
        "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "icons": {
        "128": "icon.png"
    },
    "host_permissions": [
        "https://api.telegram.org/*"
    ]
}